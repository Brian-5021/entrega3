{{>header}}
<div class="container" >

    <div class="alert alert-primary" role="alert">
  Inscribite a uno de nuestros cursos
</div>
    <form data-toggle="validator" class="container" action="/inscribir" method="POST"> 
            <!--Campos del CRUD inscripcion-->
            <div class="form-group row">
                <div class="col-md-6 mt-2">
                <label for="doc">Documento Identidad</label>
                <input readonly id="doc" type="number" min="0" name="documento" class="form-control input-sm" maxlength="11" value="{{documento}}" required>
                </div>
                <div class="col-md-6 mt-2">
                    <label for="doc">Correo Electronico</label>
                    <input readonly type="email" name="email" class="form-control" aria-describedby="emailHelp" value="{{email}}" required>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-6 mt-2">
                    <label for="doc">Nombre</label>
                    <input readonly type="text" name="nombre" class="form-control" value="{{nombre}}" required>
                </div>
                <div class="col-md-6 mt-2">
                    <label for="doc">Telefono</label>
                    <input readonly type="number" name="telefono" class="form-control" value="{{telefono}}" required>
                </div>
           </div>

            <div class="form-group row mt-2">
                {{{listarCursosDisponibles listado}}}
            </div>
            <!--Boton para validar campos-->
            <div class="text-center">
                <input type="submit" value="Inscribir" class="btn btn-block btn-outline-success mt-4" />
            </div>
    </form>
</div>
{{>footer}}
