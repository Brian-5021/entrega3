{{>header}}
<div class="container" >
    <center> <img src="https://vilmanunez.com/wp-content/uploads/2016/03/herramientas-y-recursos-para-crear-curso-online.png" class="img-fluid mb-3" style="width: 30%;" alt="..."></center>
    <form data-toggle="validator" style="" class="container" action="/crearCurso" method="POST"> 
            <!--Campos del CRUD cursos-->
            <div class="form-group row">
                <div class="col-md-6 mt-2">
                <input type="number" min="1" name="id" class="form-control input-sm" maxlength="2" placeholder="ID" required>
           </div>
            <div class="col-md-6 mt-2">
                <input type="text" name="nombre" class="form-control" placeholder="Nombre" required>
           </div>
            <div class="col-md-6 mt-2">
               <select name="modalidad" class="browser-default custom-select" >
                    <option disabled selected>Modalidad</option>
                    <option value="Presencial">Presencial</option>
                    <option value="Virtual">Virtual</option>
                </select>
            </div>
              <div class="col-md-6 mt-2">
                <input type="number"  min="0" name="intensidad" class="form-control input-sm" placeholder="Intesidad" >
           </div>
            </div>
            
            <div class="form-group row">
            <div class="col-md-6 mt-2">
                <textarea name="descripcion" class="form-control" rows="3" placeholder="Descripcion" required></textarea>
           </div>
           <div class="col-md-6 mt-2">
                <input type="number" min="0" name="valor" class="form-control" placeholder="Valor" required>
           </div>
            </div>
            <!--Boton para validar campos-->
            <div class="text-center">
                <input type="submit" value="Crear Curso" on class="btn btn-block btn-outline-success mt-4" />
            </div>
    </form>
</div>
    {{{mensaje}}}
{{>footer}}